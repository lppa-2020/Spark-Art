@{
    Layout = "~/Views/Backend/_LayoutBackend.cshtml";
}
    <head>
        <link href="~/Content/Formulario.css" rel="stylesheet" />
    </head>

<body>
    <h1 class="h1_home">Nuevo Artista</h1>
    <hr />
    <br />
    <div class="container">
        <form method="post" action="Create">
            <p>
                <label for="txtFirstName">Nombre:</label>
                <input name="FirstName" id="txtFirstName" type="text" maxlength="30" required />
            </p>
            <br />
            <p>
                <label for="txtLastName">Apellido:</label>
                <input name="LastName" id="txtLastName" type="text" maxlength="30" required />
            </p>
            <br />
            <p>
                <label for="txtLifeSpan">Edad:</label>
                <input name="LifeSpan" id="txtLifeSpan" type="number" maxlength="3" /> <br />
            </p>
            <br />
            <p>
                <label for="txtCountry">País:</label>
                <input name="Country" id="txtCountry" type="text" maxlength="30" />
            </p>
            <br />
            <p>
                <label for="txtDescription">Descripción:</label> <br />
                <textarea id="txtDescription" name="Description" rows="10" cols="60"> </textarea>
            </p>
            <br />
            <div class="div_button">
                <input class="button" type="submit" value="Guardar" />
            </div>
        </form>
    </div>
</body>