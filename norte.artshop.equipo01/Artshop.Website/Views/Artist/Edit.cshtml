@model Artshop.Data.Data.EntityFramework.Artist
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Backend/_LayoutBackend.cshtml";
}
<body>
    <h1 class="h1_home">Editar Artista</h1>
    <hr />
   
    <span class="text-danger">@ViewBag.MessageDanger</span>
    
    <h2>Artista:@Model.FullName</h2>
    <br/>
    <div class="container">
        @using (Html.BeginForm("Edit", "Artist", FormMethod.Post))
        {
            <div>
                @Html.LabelFor(x => x.FirstName)
                <div><br />
                    @Html.TextBoxFor(x => x.FirstName)
                    @Html.ValidationMessageFor(x => x.FirstName, "", new { })
                </div>
            </div>
            <div><br />
                @Html.LabelFor(x => x.LastName)
                <div>
                    @Html.TextBoxFor(x => x.LastName)
                    @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div>
                @Html.LabelFor(x => x.LifeSpan)
                <div>
                    @Html.TextBoxFor(x => x.LifeSpan)
                    @Html.ValidationMessageFor(x => x.LifeSpan, "", new { })
                </div>
            </div>
            <div>
                @Html.LabelFor(x => x.Country)
                <div>
                    @Html.TextBoxFor(x => x.Country)
                    @Html.ValidationMessageFor(x => x.Country, "", new { })
                </div>
            </div>
            <div>
                @Html.LabelFor(x => x.Description)
                <div>
                    @Html.TextBoxFor(x => x.Description)
                    @Html.ValidationMessageFor(x => x.Description, "", new { })
                </div>
            </div>

            <br />
            <div class="div_button">
                <input class="button" type="submit" value="Guardar" />
            </div>
        }
    </div>
</body>


